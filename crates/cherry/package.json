    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-quill": "^2.0.0",
    "react-redux": "^9.2.0",
    "react-render-if-visible": "^2.1.1",
    "scroll-u": "^1.2.0",
    "styled-components": "^6.1.19",
    "virtua": "^0.41.5",
    "vitest": "^3.2.4",
    "zustand": "^5.0.5"
