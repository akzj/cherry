    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "^10.4.21",
    "node-localstorage": "^3.0.5",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "storybook": "^9.0.16",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.20.3",
